%tr[person]
  %td= link_to person.vcard.try(:full_name), person, {'data-href-container' => 'tr'}
  %td= [ person.vcard.address_lines.join(", "), person.vcard.contacts.map{|contact| contact.to_s(': ', :label)}.join(', ') ].compact.join("<br/>").html_safe

  %td.action-links
    = list_link_for(:edit, person)
    = list_link_for(:delete, person)
