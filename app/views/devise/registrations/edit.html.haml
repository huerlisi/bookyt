%h2= t_title(:edit, User)

= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.input :current_password, :required => true
    
  = f.inputs t_model(Employee) do
    = f.input :person, :collection => Employee.all

  = f.buttons do
    = f.commit_button t('devise.update')
