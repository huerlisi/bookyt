  gem 'rspec-rails', ">= 2.0.0.beta.19"
  gem 'mocha'
  gem 'shoulda'
  gem 'factory_girl_rails'
  gem 'cucumber-rails'
  gem 'cucumber'
  gem 'webrat'
end

